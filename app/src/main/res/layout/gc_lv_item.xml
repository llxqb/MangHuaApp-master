<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal"
        >
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/avatar_url"
                android:layout_width="40dp"
                android:layout_height="40dp"
                />
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/ic_v_comment_avatar"
                />
        </FrameLayout>

        <TextView
            android:id="@+id/gc_nickname"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center"
            android:text="密会情人--出轨俱乐部"
            android:textColor="#F45C4F"
            android:textSize="15sp"
            />
        <Button
            android:id="@+id/bt_guanzhu"
            android:layout_width="50dp"
            android:layout_height="25dp"
            android:drawableBottom="@null"
            android:background="@drawable/bt_gz"
            android:layout_gravity="center"
            android:layout_marginTop="3dp"
            />

    </LinearLayout>

    <TextView
        android:id="@+id/content_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="工作室的小王子还是那么萌那么治愈.疲劳一扫而光啊"
        android:textColor="#000"
        android:textSize="15sp"
        />
    <!--<FrameLayout-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content">-->
        <!--<ImageView-->
            <!--android:id="@+id/iv_gc_cover"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:src="@drawable/ic_common_placeholder_l"-->
            <!--/>-->
    <!--</FrameLayout>-->
    <!--<xiao.com.kkdongman.widget.PuBuView-->
        <!--android:id="@+id/pubuView"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"/>-->
    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/tv_time"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_gravity="center"
            android:text="12-21 10:00"
            android:textColor="#7190C5"
            android:textSize="13sp"
            />
        <CheckBox
            android:id="@+id/bt_gc_likes"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:button="@null"
            android:layout_gravity="center"
            android:background="@drawable/bt_likes"
            />
        <TextView
            android:id="@+id/gc_likes_count"
            android:layout_width="40dp"
            android:layout_height="20dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_gravity="center"
            android:text="653032"
            android:singleLine="true"
            android:textSize="10sp"
            android:textColor="#BFBFBF"
            />
        <Button
            android:id="@+id/gc_bt_count"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_gravity="center"
            android:background="@drawable/bt_count"
            />
        <TextView
            android:id="@+id/gc_comments_count"
            android:layout_width="40dp"
            android:layout_height="20dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_gravity="center"
            android:singleLine="true"
            android:text="653032"
            android:textSize="10sp"
            android:textColor="#BFBFBF"
            />

    </LinearLayout>

</LinearLayout>