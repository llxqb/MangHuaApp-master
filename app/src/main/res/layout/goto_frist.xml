<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:background="#fff"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    
    <TextView
        android:id="@+id/goToFristContent"
        android:padding="10dp"
        android:textSize="15sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#BFBFBF"
        android:text="注量TOP3热作！每周三更新 责编：半石"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#D0D0D0"/>
    <RelativeLayout
        android:id="@+id/goToRelative"
        android:gravity="center_vertical"
        android:padding="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <FrameLayout
            android:id="@+id/goToFrameLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/goToFristUserHead"
                android:scaleType="fitXY"
                android:layout_width="40dp"
                android:layout_height="40dp"
                />
            <ImageView
                android:src="@drawable/ic_v_comment_avatar"
                android:scaleType="fitXY"
                android:layout_width="42dp"
                android:layout_height="42dp" />

        </FrameLayout>


        <TextView
            android:id="@+id/goToFristUserName"
            android:layout_marginTop="14dp"
            android:layout_marginLeft="5dp"
            android:text="核销"
            android:textColor="#EC904B"
            android:textSize="15sp"
            android:layout_toRightOf="@id/goToFrameLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <ImageView
            android:id="@+id/ivtozy"
            android:layout_marginTop="8dp"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_user_home_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <TextView
            android:layout_marginTop="14dp"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@id/ivtozy"
            android:text="个人主页"
            android:textSize="15sp"
            android:textColor="#D0D0D0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
</LinearLayout>